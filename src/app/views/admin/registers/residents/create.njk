{% extends 'layout.njk' %}

{% block title %}
    <title>Novo morador | Edf. Alcides</title>
{% endblock title %}

{% block styles %}
    <link rel="stylesheet" href="/styles/moradores.css">
{% endblock styles %}

{% block content %}
    <div class="container-form">
        <h2>Cadastrar novo morador</h2>
        <form class="new-resident" action="/admin/registers/residents" method="POST">
            <div class="field-form-1">
                <div>
                    <p>Apto.</p>
                    <input type="text" name="apt">
                </div>

                <div>
                    <p>Nome</p>
                    <input type="text" name="name">
                </div>
            </div>

            <div class="field-form-2">
                <div>
                    <div>
                        <p>E-mail</p>
                        <input type="email" name="email">
                    </div>
                    
                    <div>
                        <p>Telefone</p>
                        <input type="text" name="telefone">
                    </div>

                    <button type="submit">Salvar</button>

                </div>

                <div class="img-resident">
                    <input type="file" name="photo">
                </div>
            </div>
        </form>
    </div>
{% endblock %}